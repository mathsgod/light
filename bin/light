#!/usr/bin/env php
<?php

// Light CLI - Code generation tool using Symfony Console

use Light\Command\DbInstallCommand;
use Light\Command\MakeControllerCommand;
use Light\Command\MakeInputCommand;
use Light\Command\MakeModelCommand;
use Light\Command\MakeTsCommand;
use Symfony\Component\Console\Application;

require_once $_composer_autoload_path ?? __DIR__ . "/../vendor/autoload.php";

$application = new Application('Light CLI', '1.0.0');

$application->addCommand(new DbInstallCommand());
$application->addCommand(new MakeControllerCommand());
$application->addCommand(new MakeModelCommand());
$application->addCommand(new MakeInputCommand());
$application->addCommand(new MakeTsCommand());

$application->run();
